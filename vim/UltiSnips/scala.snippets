def find_between( s, first, last ):
    try:
        start = s.index( first ) + len( first )
        end = s.index( last, start )
        return s[start:end]
    except ValueError:
        return s

snip.rv = find_between(vim.eval("expand('%:p')"),"scala/","/"+fn).replace("/",".")
